<!DOCTYPE html>
<html lang="sl">

<head>
	<% include partials/head %>
</head>

<body>
    <div id="wrapper">
		<% include partials/nav %>
		
		<div class="navbar-default sidebar" role="navigation">
	        <div class="sidebar-nav navbar-collapse">
	            <ul class="nav nav-pills nav-stacked">
	            	<li>
	                    <a id="a-home" href="#tab-home" data-toggle="pill">
	                    	<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
	                    	Home
	                    </a>
	                </li>
	                <li>
	                    <a id="a-torrents" href="#tab-torrents" data-toggle="pill">
	                    	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
	                    	Torrents
	                    </a>
	                </li>
	            </ul>
	        </div>
	        <!-- /.sidebar-collapse -->
	    </div>
    </div>
    
    <div id="page-wrapper" class="container">
    	<div class="tab-content">
    		<div id="tab-home" role="tabpanel" class="tab-pane fade active">
    			<div class="row">
					<div class="col-sm-5 col-md-3">
						<div id="thumb-<%= sensors.LR_TEMPERATURE %>" class="thumbnail">
							<%
							var val = sensors.getValue(sensors.LR_TEMPERATURE);
							%>
							<div class="img-thumbnail thumbnail-img-wrapper">
								<div class="wrapper1">
									<img id="img-<%= sensors.LR_TEMPERATURE %>" src="img/temperature.png" alt="Temperature" />
								</div>
							</div>
							<div class="caption">
								<h4>Living room temperature - <span id="span-val-<%= sensors.LR_TEMPERATURE %>"><%= val.toFixed(); %></span>&#x2103;</h4>
								<p>...</p>
								<p>
									<a href="#" class="btn btn-primary" role="button">Button</a>
									<a href="#" class="btn btn-default" role="button">Button</a>
								</p>
      						</div>
    					</div>
  					</div>
  					<div class="col-sm-5 col-md-3">
						<div id="thumb-<%= sensors.LR_HUMIDITY %>" class="thumbnail">
							<%
							var val = sensors.getValue(sensors.LR_HUMIDITY);
							%>
							<div class="img-thumbnail thumbnail-img-wrapper">
								<div class="wrapper1">
									<img id="img-<%= sensors.LR_HUMIDITY %>" src="img/humidity.png" alt="Humidity" />
								</div>
							</div>
							<div class="caption">
								<h4>Living room humidity - <span id="span-val-<%= sensors.LR_HUMIDITY %>"><%= val.toFixed(); %></span>%</h4>
								<p>...</p>
								<p>
									<a href="#" class="btn btn-primary" role="button">Button</a>
									<a href="#" class="btn btn-default" role="button">Button</a>
								</p>
      						</div>
    					</div>
  					</div>
  					<div class="col-sm-5 col-md-3">
						<div id="thumb-<%= sensors.LR_LUMINOSITY %>" class="thumbnail">
							<%
							var val = sensors.getValue(sensors.LR_LUMINOSITY);
							%>
							<div class="img-thumbnail thumbnail-img-wrapper">
								<div class="wrapper1">
									<img id="img-<%= sensors.LR_LUMINOSITY %>" src="img/luminosity.png" alt="Luminosity" />
								</div>
							</div>
							<div class="caption">
								<h4>Living room luminosity - <span id="span-val-<%= sensors.LR_LUMINOSITY %>"><%= val.toFixed(); %></span>%</h4>
								<p>...</p>
								<p>
									<a href="#" class="btn btn-primary" role="button">Button</a>
									<a href="#" class="btn btn-default" role="button">Button</a>
								</p>
      						</div>
    					</div>
  					</div>
				</div>
    		</div>
    		<div id="tab-torrents" role="tabpanel" class="tab-pane fade">
   				<iframe id="frame-torrents" src="http://controller.home/transmission/web/"></iframe>
    		</div>
    	</div>
    </div>
    <!-- /#wrapper -->

     <% include partials/includejs %>
     <script type="text/javascript" src="js/index.js"></script>
</body>
</html>